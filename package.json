{
  "name": "foodprint-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:debug": "cross-env VITE_FIREBASE_DEBUG=true vite --mode development",
    "dev:fast": "cross-env VITE_FIREBASE_DEBUG=false VITE_PERFORMANCE_MONITOR=false vite --mode development",
    "build": "tsc -b && vite build --mode production",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "build:fast": "tsc -b && vite build --mode production --minify",
    "lint": "eslint .",
    "preview": "vite preview",
    "firebase:deploy": "firebase deploy",
    "firebase:rules": "firebase deploy --only firestore:rules",
    "firebase:init": "firebase init",
    "test:firebase": "echo 'Run FirebaseDiagnostic.runFullDiagnostic() in browser console'",
    "perf:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "optimize": "npm run build:fast && npm run preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "firebase": "^11.9.1",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.516.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-router-dom": "^7.6.2",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
